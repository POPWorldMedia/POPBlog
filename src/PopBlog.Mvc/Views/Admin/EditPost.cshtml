@model PopBlog.Mvc.Models.Post
@{
	ViewBag.Title = "Edit Post";
	Layout = "AdminLayout";
}
@section header
{
	<script src="~/lib/PopBlog/dist/TinyHelper.min.js"></script>
	<script type="text/javascript">
		initEditor("#FullText");
	</script>
}

<h1>Edit Post</h1>

<form asp-action="EditPost" method="POST" enctype="multipart/form-data">
	<div class="mb-3">
		<label for="Title" class="form-label">Title</label>
		<input asp-for="Title" class="form-control" />
	</div>
	<div class="mb-3">
		<label for="Name" class="form-label">Name</label>
		<input asp-for="Name" class="form-control" />
	</div>
	<div class="mb-3">
		<textarea asp-for="FullText" class="form-control" rows="30"></textarea>
	</div>
	<div class="mb-3">
		<label for="TimeStamp" class="form-label">Time Stamp</label>
		<input asp-for="TimeStamp" type="text" class="form-control" />
	</div>
	<input asp-for="IsPrivate" type="hidden" />
	<div class="form-check">
		<label>
			<input asp-for="IsClosed" type="checkbox" class="form-check-input" /> Is closed?
		</label>
	</div>
	<div class="form-check">
		<label>
			<input asp-for="IsLive" type="checkbox" class="form-check-input" /> Is live?
		</label>
	</div>
	<div class="mb-3">
		<label for="PodcastFile" class="form-label">Podcast file (optional)</label>
		<input type="file" class="form-control" id="PodcastFile" name="PodcastFile">
	</div>

	<input type="submit" value="Save" class="btn btn-primary mb-3" />
</form>

<hr class="my-5"/>

<form asp-action="DeletePost" method="post" class="text-end">
	<input type="hidden" name="PostID" value="@Model.PostID" />
	<input type="submit" value="Delete" class="btn btn-primary mb-3" />
</form>