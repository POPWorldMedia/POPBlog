@model PopBlog.Mvc.Models.Post
@{
	ViewBag.Title = "New Photo Post";
	Layout = "AdminLayout";
}
@section header
{
}

<h1>New Photo Post</h1>

<form asp-action="NewPhotoPost" method="POST" enctype="multipart/form-data">
	<div class="mb-3">
		<label for="Title">Title</label>
		<input asp-for="Title" class="form-control" />
	</div>
	<div class="mb-3">
		<textarea asp-for="FullText" class="form-control" rows="5"></textarea>
	</div>
	<div class="mb-3">
		<label for="PhotoFile">Photo</label>
		<input type="file" class="form-control" id="PhotoFile" name="PhotoFile">
	</div>

	<input type="submit" value="Save" class="btn btn-primary mb-3" />
</form>