@model IEnumerable<string>
@{
	ViewBag.Title = "IP Ban";
	Layout = "AdminLayout";
}

<h1>IP Ban</h1>

<h2>Recent posts:</h2>

<h2>Add</h2>

<form asp-controller="Admin" asp-action="AddIPBan" method="POST">
	<div class="form-group">
		<label>New IP to ban</label>
		<input type="text" id="NewIP" name="NewIP" class="form-control" />
	</div>
	<input type="submit" value="Save" class="btn btn-primary" />
</form>

<h2>Remove</h2>

<form asp-controller="Admin" asp-action="DeleteIPBan" method="POST">
	<div class="form-group">
		<select type="text" id="BanList" name="BanList" multiple="multiple" class="form-control" style="height: 300px;">
			@foreach (var item in Model)
			{
				<option>@item</option>
			}
		</select>
	</div>
	<input type="submit" value="Remove" class="btn btn-primary" />
</form>