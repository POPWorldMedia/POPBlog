@using System.Globalization
@using PopBlog.Mvc
@model IEnumerable<PopBlog.Mvc.Models.Post>
@inject IConfig Config
@{
}

<h1>Archive: @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(ViewBag.Month), @ViewBag.Year</h1>

@foreach (var item in Model)
{
	<div class="my-3">
		<h2 class="blogPostTitle"><a asp-controller="Post" asp-action="Detail" asp-route-urlTitle="@item.UrlTitle">@item.Title</a></h2>
		<h3 class="blogPostDetails">
			posted by @item.Name | @item.TimeStamp.ToString("dddd, MMMM d, yyyy, h:mm tt") | <a asp-controller="Post" asp-action="Detail" asp-route-urlTitle="@item.UrlTitle" asp-fragment="comments">comments</a>: @item.Replies
		</h3>
		<div class="postBody">
			@Html.Raw(item.FullText)
		</div>
		<hr />
	</div>
}